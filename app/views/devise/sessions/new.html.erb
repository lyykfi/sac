<h2>Войти в систему</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :login, label: 'Логин', :required => false, :autofocus => true %>
    <%= f.input :password, label: 'Пароль', :required => false %>

    <%= f.input :remember_me, inline_label: 'Запомнить меня', label: false, :as => :boolean if devise_mapping.rememberable?  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Войти" %>
  </div>
<% end %>

