<%- if error_ids.any? %>

var body_text = "<b>Имеются связные записи. Следующие записи невозможно удалить: </b><%= error_names.to_s %>";

var errorsConfirm;

errorsConfirm = function() {
  return $("#errors-confirm").confirmModal({
    heading: "Внимание",
    body: body_text,
    okButtonText: 'Закрыть',
    enableCancel: false,
    callback: function() {
      return tableRequest();
    }
  });
};

errorsConfirm();

<%- end %>